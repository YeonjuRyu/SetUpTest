{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2017",
    "jsx": "react",
    "module": "esnext",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./node_modules/@types"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "watch": true,
    "pretty": true,
    "paths": {
      "*": ["node_modules/*"],
      "@api/*": ["src/api/*"],
      "@type/*": ["src/type/*"],
      "@util/*": ["src/util/*"],
      "@hooks/*": ["src/hooks/*"],
      "@context/*": ["src/context/*"],
      "@screens/*": ["src/screens/*"],
      "@routes": ["src/Routes/index.ts"],
      "@routes/types": ["src/Routes/types.ts"],
      "@images": ["src/assets/images/*"],
      "@styles": ["src/constant/styles.ts"],
      "@constant": ["src/constant/index.ts"],
      "@components": ["src/components/index.ts"]
    },
  },
  "exclude": [
    "node_modules",
    "android",
    "ios"
  ]
}